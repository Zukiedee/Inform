<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <LinearLayout
            android:id="@+id/news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="@string/Title"
                android:textColor="#000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/description"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/description"
                android:textSize="16sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="87dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/news"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/ic_image" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/news"
            android:layout_marginTop="10dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:background="#fff"
                android:drawableLeft="@drawable/ic_add_reminder"
                android:textSize="12sp"
               android:layout_alignParentEnd="true"
                android:text="@string/add_reminder"
                android:drawableStart="@drawable/ic_add_reminder"
                android:layout_alignParentRight="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_user"
                android:id="@+id/user"/>

            <TextView
                android:id="@+id/userPosted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/username"
                android:layout_toRightOf="@id/user"
                android:layout_toEndOf="@id/user"
                android:textColor="#000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/datePosted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/date"
                android:textSize="12sp"
                android:layout_marginStart="10dp"
                android:layout_toRightOf="@id/userPosted"
                android:layout_toEndOf="@id/userPosted" />
        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>